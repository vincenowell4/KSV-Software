@model VotingApp.Models.CreatedVote
@{
	ViewData["Title"] = "Multiple Choice Page";
}

<div class="jumbotron jumbotron-fluid full-width" style="margin-bottom: 0px;
	                                                     height: 90vh; 
	                                                     background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url(/Images/bannerImage3b.jpg); 
	                                                     background-size: cover; 
	                                                     left: 50%;
	                                                     margin-left: -50vw;
	                                                     margin-right: -50vw;
	                                                     max-width: 100vw;
	                                                     position: relative;
	                                                     right: 50%;
	                                                     width: 100vw;">

	<div class="text-center text-white">
		<h1 class="display-4">Multiple Choice Poll</h1>
		<hr class="mb-4"/>
		<h3>Please enter voting options below: </h3>
	</div>

	<div class="text-center mt-3">
		<div class="row mb-2 justify-content-center">
			<div class="col-md-8 mx-auto justify-content-center"> @*COL HERE col-sm*@
				<div class="card justify-content-center">
					<div class="card-body justify-content-center">
						<h5 class="card-title text-black">Your current voting options: <span data-toggle="tooltip" data-placement="bottom" title="Here are your current voting options you have submitted. To add more hit the add button. If you would like to delete one then hit the delete button next to the option you wish to delete.">&#8505;</span></h5>
						<p class="card-text text-black">
							@if (@Model.VoteOptions.Any())
							{
								<ul class="list-group list-group-flush">
									@foreach (var option in Model.VoteOptions)
									{
										<li class="list-group-item">
											<form method="post" asp-action="RemoveOption">
												@option.VoteOptionString
												<button type="submit" name="optionId" class="btn btn-danger btn-sm" name="optionId" value="@option.Id">Delete</button>
												<input name="voteId" value="@Model.Id" hidden></input>
											</form>
										</li>
									}
								</ul>
							}
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row mb-2">
				<div class="col-md-8 mx-auto justify-content-center"> 
					<form asp-action="AddMultipleChoiceOption" method="post">
						<input name="id" type="number" value="@Model.Id" hidden></input>
						<label class="text-center text-white mt-2">Please enter your vote option in the box below:<span data-toggle="tooltip" data-placement="bottom" title="Enter your voting options here one at a time. You must have at least 2 voting options for a multiple choice poll and 3 options for a multi-round poll. To add more hit the add button.">&#8505;</span></label>
						<div class="input-group">
							<textarea name="option" class="h-25 form-control mt-3" type="text" rows="1" required></textarea>
						
							<div class="input-group-append p-3">
								@if (Model.VoteOptions.Count() > 24)
								{
									<button class="btn btn-light bg-success btn-outline-primary disabled">Add voting option</button>
								}
								else
								{
									<button type="submit" class="btn btn-light bg-success btn-outline-primary">Add voting option</button>
								}
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="row mb-2">
			<div class="col justify-content-center btn-group">
				<form asp-action="BackToIndexPage">
					<button type="submit" style="width: 100px !important" class="btn btn-light btn-lg bg-info btn-outline-primary mb-2" value="@Model.Id" name="ID">Edit</button>
				</form>
				&nbsp;&nbsp;
				<form asp-action="MultipleChoiceToConfirmation" method="post">
					@if (@Model.VoteOptions.Count() >= ((Model.VoteTypeId == 3) ? 3 : 2 ) )
					{
						<button name="id" type="submit" style="width: 100px !important" class="btn btn-light btn-lg bg-secondary btn-outline-primary mb-2" value="@Model.Id">Submit</button>
					}
					else {
						<button style="width: 100px !important" class="btn btn-light btn-lg bg-secondary btn-outline-primary disabled mb-2">Submit</button>
					}
				</form>
			</div>
		</div>
	</div>
</div>
